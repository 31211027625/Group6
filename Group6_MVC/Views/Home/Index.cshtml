@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chủ</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- <link rel="stylesheet" href="styleView.css"> -->
    <style>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5;
}

header {
    background-color: #333;
    color: #fff;
    padding: 10px;
    text-align: center;
}

main {
    padding: 20px;
}

input[type="text"] {
    padding: 8px;
    width: 200px;
    margin-right: 10px;
}

button {
    padding: 8px 15px;
    color: #fff;
    border: none;
    cursor: pointer;
    margin: 5px;
    border-radius: 5px;
}

button:hover {
    opacity: 0.8;
}

table {
    width: 100%;
    border-collapse: collapse;
}

th, td {
    padding: 8px;
    border-bottom: 1px solid #ddd;
    text-align: left;
}

th {
    background-color: #f2f2f2;
}

.search-container {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 20px;
}

.search-container input[type="text"] {
    padding: 6px;
    width: 100%;
    margin-left: 8px;
}

.quick-key {
    margin-top: 20px;
    text-align: center;
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
}

.cart {
    margin-top: 20px;
    border: 1px solid #ccc;
    padding: 10px;
    background-color: #fff;
    border-radius: 10px;
}

.cart button {
    background-color: #007bff;
}

.cart button:hover {
    background-color: #0056b3;
}

.payment-container {
    margin-top: 20px;
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
}
    </style>
</head>
<body>
    <header>
        <h1>Trang Chủ</h1>
    </header>
    <main>
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Tìm kiếm...">
            <!-- Sử dụng icon kính lúp thay vì chữ "Tìm" -->
            <button onclick="search()" style="background-color: #89AAE6;"><i class="fas fa-search"></i></button>
        </div>
        <br>
        <div class="quick-key">
            <h2>Quick key</h2>
            <!-- Hiển thị các nút sản phẩm -->
            <div id="quickKeyButtons"></div>
        </div>
        <br>
        <div    div class="cart">
    <h2>Giỏ hàng</h2>
    <ul id="cartList"></ul>
    <button onclick="addToPayment()" style="background-color: #89AAE6;">Thêm vào thanh toán</button>
        </div>
        <br>
        <div>
            <h2>Màn hình thanh toán</h2>
            <table id="paymentTable">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Thuế</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody id="paymentItems">
                    <!-- Các dòng sản phẩm và thông tin thanh toán sẽ được thêm bằng JavaScript -->
                </tbody>
            </table>
        </div>
    </main>
    <script>
        // Mảng chứa danh sách sản phẩm
        const products = [
            { name: "Sản phẩm A", price: 100 },
            { name: "Sản phẩm B", price: 200 },
            { name: "Sản phẩm C", price: 150 },
            { name: "Con chó C", price: 150 },
            // Thêm sản phẩm khác nếu cần
        ];

        // Mảng chứa giỏ hàng
        let cartItems = [];

        // Hàm tìm kiếm
        function search() {
            const searchTerm = document.getElementById("searchInput").value.toLowerCase();
            const filteredProducts = products.filter(product => product.name.toLowerCase().includes(searchTerm));
            displayProducts(filteredProducts);
        }

        // Hàm hiển thị danh sách sản phẩm và thông tin thanh toán
        function displayProducts(products) {
            const tableBody = document.querySelector("#paymentTable tbody");
            tableBody.innerHTML = "";
            let total = 0;

            products.forEach(product => {
                const tax = product.price * 0.1; // Giả sử thuế là 10%
                const totalPrice = product.price + tax;
                total += totalPrice;

                const row = `
                    <tr>
                        <td>${product.name}</td>
                        <td>${product.price}</td>
                        <td>${tax}</td>
                        <td>${totalPrice}</td>
                    </tr>
                `;
                tableBody.innerHTML += row;
            });

            // Thêm dòng tổng cộng
            const totalRow = `
                <tr>
                    <th colspan="3">Tổng cộng</th>
                    <td>${total}</td>
                </tr>
            `;
            tableBody.innerHTML += totalRow;
        }

        // Tạo nút cho mỗi sản phẩm trong Quick key
        const quickKeyContainer = document.getElementById("quickKeyButtons");
        products.forEach(product => {
            const button = document.createElement("button");
            button.textContent = product.name;
            button.onclick = function() {
                addToCart(product);
            };
            quickKeyContainer.appendChild(button);
        });

        // Hàm thêm sản phẩm vào giỏ hàng
        function addToCart(product) {
            cartItems.push(product);
            displayCart();
        }

        // Hàm hiển thị giỏ hàng
        function displayCart() {
            const cartList = document.getElementById("cartList");
            cartList.innerHTML = "";
            cartItems.forEach(item => {
                const li = document.createElement("li");
                li.textContent = item.name;
                cartList.appendChild(li);
            });
        }

        // Hàm thêm sản phẩm từ giỏ hàng vào màn hình thanh toán
        function addToPayment() {
            const paymentItems = document.getElementById("paymentItems");
            cartItems.forEach(item => {
                const tax = item.price * 0.1; // Giả sử thuế là 10%
                const totalPrice = item.price + tax;
                const row = `
                    <tr>
                        <td>${item.name}</td>
                        <td>${item.price}</td>
                        <td>${tax}</td>
                        <td>${totalPrice}</td>
                    </tr>
                `;
                paymentItems.innerHTML += row;
            });
            cartItems = []; // Xóa giỏ hàng sau khi thêm vào thanh toán
            displayCart(); // Cập nhật lại giao diện giỏ hàng
        }
    </script>
</body>
</html>





