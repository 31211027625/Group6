@model List<Group6_WebApi.Models.Invoice> // Thay thế bằng model tương ứng

<table class="table">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Invoice Date</th>
            <th>Total Amount</th>
            <!-- Thêm các cột khác cần hiển thị -->
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.CustomerName</td>
                <td>@invoice.TotalAmount</td>
                <!-- Thêm các cột khác tương ứng -->
            </tr>
        }
    </tbody>
</table>
